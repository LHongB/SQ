<!--回复-->
<% if( article.reply_num > 0 ){ %>
<div class="aw-mod aw-question-comment" ng-controller="commentCtrl">
    <div class="mod-head">
        <ul class="nav nav-tabs aw-nav-tabs active">
            <h2 class="hidden-xs"><%= article.reply_num %> 个回复</h2>
        </ul>
    </div>
    <div class="mod-body aw-feed-list">
        <% replys.forEach( (reply) =>{ %>

        <div class="aw-item" id="<%= reply._id %>" >
            <div class="mod-head">
                <a class="anchor"></a>
                <a class="aw-user-img aw-border-radius-5 pull-right" href="#">
                    <img src="<%= reply.author.avatar %>">
                </a>
                <div class="title">
                    <p>
                        <a class="aw-user-name" href="/user/<%= reply.author.name %>"> <%= reply.author.name %> </a>
                    </p>
                </div>
            </div>
            <div class="mod-body clearfix">
                <div class="markitup-box">
                    <%= reply.content %>
                </div>
            </div>
            <div class="mod-footer">
                <div class="meta clearfix">
                    <span class="text-color-999 pull-right"> <%= reply.create_time_ago() %> </span>
                    <span class="operate">
                        <a class="agree">
                            <i class="fa fa-thumbs-o-up"></i>
                            <b class="count"> <%= reply.likes %> </b>
                        </a>

                     </span>
                    <span class="operate">
                        <a class="aw-add-comment" ng-click="showComment($event)">
                            <i class="fa fa-commenting-o"></i>
                            <%= reply.comment_num %>条回复
                        </a>
                    </span>
                </div>
                <!--回复的DIV留在这里，以后再做-->
                <div class="aw-comment-box">
                    <div class="aw-comment-list">
                        <div class="newContent"> </div>
                        <div class="page">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-6">
                                    <ul class="pagination">

                                        <li class="active">
                                            <a class="loadpage" href="javascript:void(0)">1</a>
                                        </li>

                                        <li class="">
                                            <a class="loadpage" href="javascript:void(0)">2</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>

                        <form id="<%= reply._id %>_form" name="commentForm" target="/<%= article._id%>/comment" ng-submit="postForm($event)">
                            <input type="hidden" name="reply_id" value="<%= reply._id %>">
                            <input type="hidden" name="reply_author" value="<%= reply.author._id%>">


                            <div class="aw-comment-box-main">
                                <textarea class="editor" name="meg_content"></textarea>
                                <div class="aw-comment-box-btn" style="display: block;">
                                    <span class="pull-right">
                                        <button type="submit" class="btn btn-mini btn-success">评论</button>
                                        <!--<a class="btn btn-mini btn-gray close-comment-box">取消</a>-->
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <% }) %>
    </div>
    <div class="mod-footer"></div>
</div>

<% } %>
<!--回复-->